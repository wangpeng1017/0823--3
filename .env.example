# ================================
# 飞书合同内容更新助手 - 环境变量配置
# ================================

# ================================
# 必需配置 - 应用无法启动如果缺少这些变量
# ================================

# 飞书开放平台配置 (必需)
# 获取方式: https://open.feishu.cn/ 创建企业自建应用
FEISHU_APP_ID=cli_xxxxxxxxxxxxxxxxx
FEISHU_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
FEISHU_REDIRECT_URI=http://localhost:3000/api/auth/callback

# 应用基础配置 (必需)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# 数据加密配置 (必需)
# 生成方式: openssl rand -hex 32
ENCRYPTION_KEY=your_32_character_encryption_key_here_1234567890abcdef
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long

# ================================
# 数据存储配置 (生产环境必需)
# ================================

# Vercel Postgres 数据库 (生产环境必需)
# 获取方式: Vercel控制台 -> Storage -> Create Database
DATABASE_URL=postgres://username:password@host:port/database
POSTGRES_PRISMA_URL=postgres://username:password@host:port/database?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgres://username:password@host:port/database

# Vercel KV Redis缓存 (推荐)
# 获取方式: Vercel控制台 -> Storage -> Create KV Database
KV_REST_API_URL=https://your-kv-database.kv.vercel-storage.com
KV_REST_API_TOKEN=your_kv_token_here

# Vercel Blob文件存储 (OCR功能必需)
# 获取方式: Vercel控制台 -> Storage -> Create Blob Store
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxxxxxx

# ================================
# OCR服务配置 (可选 - 选择其一)
# ================================

# 选项1: Google Gemini Vision API (推荐)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# 选项2: 百度OCR API
BAIDU_OCR_API_KEY=your_baidu_ocr_api_key
BAIDU_OCR_SECRET_KEY=your_baidu_ocr_secret_key

# 选项3: Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_PRIVATE_KEY=your_private_key
GOOGLE_CLOUD_CLIENT_EMAIL=your_service_account_email

# 选项4: Azure Computer Vision
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your_azure_key

# ================================
# 可选配置 - 增强功能
# ================================

# 日志配置
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# 性能配置
MAX_FILE_SIZE=10485760
REQUEST_TIMEOUT=30000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 安全配置
CORS_ORIGIN=http://localhost:3000
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# 监控配置 (可选)
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id

# 开发配置
ENABLE_DEBUG=false
MOCK_FEISHU_API=false
SKIP_AUTH_IN_DEV=false
